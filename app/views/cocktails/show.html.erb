
<%= @cocktail.name %>
<br>
<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %></p>
  <p> <%= dose.ingredient.name %></p>
  <%= link_to 'destroy', dose_path(dose), method: :delete, data: { confirm: 'are you sure ?' } %>
  <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>

<% end %>

<%= link_to "new dose", new_cocktail_dose_path(@cocktail) %>


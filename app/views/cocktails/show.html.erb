
<br>
<div class="container" >
<h3> <%= @cocktail.name %></h3>
<%= cl_image_tag @cocktail.photo.key, width: 400, height: 300 %>

<br>
<% @cocktail.doses.each do |dose| %>
  <div class="d-flex p-2 bd-highlight">
    <p> <%= dose.description %></p>
    <p> <%= dose.ingredient.name %></p>
    <br>
    <p><%= link_to 'destroy', dose_path(dose), method: :delete, data: { confirm: 'are you sure ?' } %></p>
    <% end %>

    </div>
<%= link_to "new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>

</div>
